  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.84.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "lien.addConnection",
        "title": "Lien: Add Connection"
      },
      {
        "command": "lien.clear",
        "title": "Lien: Clear"
      }
    ]
  },
  "sponsor": {
    "url": "https://github.com/sponsors/zigamacele"
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
